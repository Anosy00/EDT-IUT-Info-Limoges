{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "ES2020",

    "strict": true,
    "allowJs": true,

    "rootDir": "src",
    "outDir": "./dist/cjs",
    "declaration": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
